<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="DarkTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="themeName" >DarkTheme</item>
        <item name="android:windowNoTitle">true</item>
        <item name="white">#000000</item>
        <item name="light_gray">#000000</item>
        <item name="black_overlay">#000000</item>
        <item name="gray_light_text">#A3A3A3</item>
        <item name="gray_dark_text">#ffffff</item>
        <item name="white_smoke">#000000</item>
        <item name="title_blue">#ffffff</item>
        <item name="rect_big">@drawable/rect_big_dark</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="themeName" >AppTheme</item>
        <item name="android:windowNoTitle">true</item>
        <item name="title_blue">@color/navy_blue</item>
        <item name="white">#ffffffff</item>
        <item name="light_gray">#ffd8d8d8</item>
        <item name="black_overlay">#66000000</item>
        <item name="gray_light_text">#A3A3A3</item>
        <item name="gray_dark_text">#292929</item>
        <item name="white_smoke">#F6F6F6</item>
        <item name="rect_big">@drawable/rect_big</item>
    </style>

    <style name="auto_size">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fillh_auto_size">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fillv_auto_size">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="fill_both_size">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="channel_list_new_topic" parent="@style/fillh_auto_size">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ff004276</item>
    </style>

    <style name="fillh_three_four">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200.0dip</item>
    </style>

    <style name="fillh_List">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="image_thumbinal">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">57.3dp</item>
    </style>

    <style name="image_thumbinal_big">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">71.6dp</item>
    </style>

    <style name="channel_list_new_message" parent="@style/auto_size">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#ff9f9999</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">3.0dip</item>
    </style>

    <style name="review_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="roundButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/ic_launcher</item>
    </style>

    <style name="editText">
        <item name="android:textColor">?attr/gray_dark_text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="rectBig">
        <item name="android:textColor">?attr/gray_dark_text</item>
        <item name="android:background">?attr/rect_big</item>
    </style>
    
    <style name="textView">
        <item name="android:textColor">?attr/gray_dark_text</item>
    </style>
</resources>